@using Application.Extensions
@using Common.Enums
@using Web.Areas.Admin.Models
@model IEnumerable<DocumentViewModel>
<table class="table table-striped" id="docTable">
    <thead>
        <tr>
            <th>
                IMEI دستگاه
            </th>
            <th>
                نوع فایل
            </th>
            <th>
                وضعیت فایل
            </th>
            <th style="width:10%">
                @localizer["Actions"]
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doc in Model)
        {
            <tr>
                <td>
                    <a>
                        @doc.IMEI
                    </a>
                </td>
                <td>
                    <a>
                        @(EnumHelper<DocumentType>.GetDisplayValue(doc.DocumentType))
                    </a>
                </td>
                <td>
                    @if (doc.IsConfirm)
                    {
                        <span class="badge badge-success">پذیرفته شده</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">پذیرفته نشده</span>
                    }
                </td>
                <td>
                    <div class="btn-group">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            عملیات
                        </button>
                        @*                        <div class="dropdown-menu shadow animated--grow-in">
                            <a style='margin-right:16px' asp-area="Identity" asp-page="/Profile" asp-route-userId="@user.Id" class="dropdown-item">
                            <i class="fas fa-user"></i> @localizer["Profile"]
                            </a>
                            <a style='margin-right:16px' asp-controller="UserRole" asp-action="Index" asp-route-userId="@user.Id" class="dropdown-item">
                            <i class="fas fa-wrench"></i> @localizer["Manage Roles"]
                            </a>
                            </div>*@
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
            $("#docTable").DataTable({
                    searching: true,
                    ordering:  true,
                    processing: true,
                    select: true,
                    responsive: true,
                    oLanguage : {
                        sSearch: "جستجو: ",
                        sInfo: "نمایش _START_ تا _END_ از _TOTAL_ رکورد",
                        sLengthMenu: "نمایش _MENU_ رکورد",
                        sInfoFiltered: "فیلتر شده از _MAX_ رکورد",
                        sInfoEmpty  : "هیچ داده ای یافت نشد",
                        sZeroRecords: "رکوردی یافت نشد",
                        oPaginate:{
                            sPrevious: "قبلی",
                            sNext: "بعدی",
                        }
                    },
                    initComplete: function(settings, json) {
                      //SetLoading(false,"#myT");
                    }
            });
        });
</script>